<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.junyangwang.easycall"
    android:versionCode="15"
    android:versionName="0.1.5" >

    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".Main"
            android:label="@string/app_name"
            android:screenOrientation= "portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EasyCall"
            android:label="@string/app_name"
            android:screenOrientation= "portrait" >
            <intent-filter>
                <action android:name="android.intent.action.EASYCALL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddNumber"
            android:label="@string/app_name"
            android:screenOrientation= "portrait" >
            <intent-filter>
                <action android:name="android.intent.action.ADDNUMBER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>